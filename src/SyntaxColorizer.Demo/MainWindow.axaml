<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:SyntaxColorizer.Controls;assembly=SyntaxColorizer"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="SyntaxColorizer.Demo.MainWindow"
        Title="SyntaxColorizer Demo"
        Width="1200" Height="800"
        WindowStartupLocation="CenterScreen">

    <Window.Styles>
        <!-- Button styles for better hover visibility -->
        <Style Selector="Button">
            <Setter Property="Background" Value="#E0E0E0" />
            <Setter Property="Foreground" Value="#333333" />
        </Style>
        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#C0C0C0" />
            <Setter Property="Foreground" Value="#000000" />
        </Style>
        <Style Selector="Button:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#A0A0A0" />
        </Style>

        <!-- ComboBox styles for better visibility -->
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="Foreground" Value="#333333" />
        </Style>
        <Style Selector="ComboBox:pointerover /template/ Border#Background">
            <Setter Property="Background" Value="#E8E8E8" />
        </Style>

        <!-- ComboBox dropdown popup background -->
        <Style Selector="ComboBox /template/ Popup Border">
            <Setter Property="Background" Value="#FFFFFF" />
        </Style>

        <!-- ComboBoxItem styles for dropdown -->
        <Style Selector="ComboBoxItem">
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="Background" Value="#FFFFFF" />
        </Style>
        <Style Selector="ComboBoxItem /template/ ContentPresenter">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="Foreground" Value="#333333" />
        </Style>
        <Style Selector="ComboBoxItem:pointerover">
            <Setter Property="Background" Value="#0078D7" />
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>
        <Style Selector="ComboBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#0078D7" />
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>
        <Style Selector="ComboBoxItem:selected">
            <Setter Property="Background" Value="#0078D7" />
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>
        <Style Selector="ComboBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#0078D7" />
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>

        <!-- CheckBox styles - use class to override theme -->
        <Style Selector="CheckBox.toolbar-checkbox">
            <Setter Property="Foreground" Value="#333333" />
        </Style>
        <Style Selector="CheckBox.toolbar-checkbox:pointerover">
            <Setter Property="Foreground" Value="#333333" />
        </Style>
        <Style Selector="CheckBox.toolbar-checkbox:pointerover /template/ ContentPresenter">
            <Setter Property="Foreground" Value="#333333" />
        </Style>
        <!-- Override any TextBlock inside the checkbox -->
        <Style Selector="CheckBox.toolbar-checkbox TextBlock">
            <Setter Property="Foreground" Value="#333333" />
        </Style>
        <Style Selector="CheckBox.toolbar-checkbox:pointerover TextBlock">
            <Setter Property="Foreground" Value="#333333" />
        </Style>

        <!-- Checkbox box styling - checked state -->
        <Style Selector="CheckBox.toolbar-checkbox /template/ Border#NormalRectangle">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#666666" />
        </Style>
        <Style Selector="CheckBox.toolbar-checkbox:checked /template/ Border#NormalRectangle">
            <Setter Property="Background" Value="#0078D7" />
            <Setter Property="BorderBrush" Value="#0078D7" />
        </Style>
        <Style Selector="CheckBox.toolbar-checkbox:pointerover /template/ Border#NormalRectangle">
            <Setter Property="BorderBrush" Value="#333333" />
        </Style>
        <Style Selector="CheckBox.toolbar-checkbox:checked:pointerover /template/ Border#NormalRectangle">
            <Setter Property="Background" Value="#006CBE" />
            <Setter Property="BorderBrush" Value="#006CBE" />
        </Style>

        <!-- Checkmark glyph -->
        <Style Selector="CheckBox.toolbar-checkbox /template/ Path#CheckGlyph">
            <Setter Property="Stroke" Value="#FFFFFF" />
        </Style>
        <Style Selector="CheckBox.toolbar-checkbox:checked /template/ Path#CheckGlyph">
            <Setter Property="IsVisible" Value="True" />
            <Setter Property="Stroke" Value="#FFFFFF" />
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#F0F0F0" Padding="10">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Language:" VerticalAlignment="Center" Foreground="#333333" />
                <ComboBox x:Name="LanguageSelector" Width="150" SelectedIndex="0">
                    <ComboBoxItem Content="None" Tag="None" />
                    <ComboBoxItem Content="Bash" Tag="Bash" />
                    <ComboBoxItem Content="C" Tag="C" />
                    <ComboBoxItem Content="C#" Tag="CSharp" />
                    <ComboBoxItem Content="C++" Tag="Cpp" />
                    <ComboBoxItem Content="CSS" Tag="Css" />
                    <ComboBoxItem Content="Dockerfile" Tag="Dockerfile" />
                    <ComboBoxItem Content="Go" Tag="Go" />
                    <ComboBoxItem Content="HTML" Tag="Html" />
                    <ComboBoxItem Content="Java" Tag="Java" />
                    <ComboBoxItem Content="JavaScript" Tag="JavaScript" />
                    <ComboBoxItem Content="JSON" Tag="Json" />
                    <ComboBoxItem Content="Kotlin" Tag="Kotlin" />
                    <ComboBoxItem Content="Markdown" Tag="Markdown" />
                    <ComboBoxItem Content="MSSQL" Tag="MsSql" />
                    <ComboBoxItem Content="Oracle SQL" Tag="OracleSql" />
                    <ComboBoxItem Content="PHP" Tag="Php" />
                    <ComboBoxItem Content="PowerShell" Tag="PowerShell" />
                    <ComboBoxItem Content="Python" Tag="Python" />
                    <ComboBoxItem Content="Ruby" Tag="Ruby" />
                    <ComboBoxItem Content="Rust" Tag="Rust" />
                    <ComboBoxItem Content="Scala" Tag="Scala" />
                    <ComboBoxItem Content="Swift" Tag="Swift" />
                    <ComboBoxItem Content="TypeScript" Tag="TypeScript" />
                    <ComboBoxItem Content="Visual Basic" Tag="VisualBasic" />
                    <ComboBoxItem Content="XML" Tag="Xml" />
                    <ComboBoxItem Content="YAML" Tag="Yaml" />
                </ComboBox>

                <TextBlock Text="Theme:" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="#333333" />
                <ComboBox x:Name="ThemeSelector" Width="180" SelectedIndex="0">
                    <ComboBoxItem Content="Visual Studio Light" Tag="VSLight" />
                    <ComboBoxItem Content="Visual Studio Dark" Tag="VSDark" />
                    <ComboBoxItem Content="Monokai" Tag="Monokai" />
                    <ComboBoxItem Content="GitHub Light" Tag="GitHubLight" />
                    <ComboBoxItem Content="GitHub Dark" Tag="GitHubDark" />
                    <ComboBoxItem Content="Solarized Light" Tag="SolarizedLight" />
                    <ComboBoxItem Content="Solarized Dark" Tag="SolarizedDark" />
                </ComboBox>

                <CheckBox x:Name="ShowLineNumbersCheckBox" Classes="toolbar-checkbox" Content="Show Line Numbers" IsChecked="True" VerticalAlignment="Center" Margin="20,0,0,0" />

                <Button x:Name="FormatButton" Content="Format Code" Margin="20,0,0,0" />
                <Button x:Name="RunLinterButton" Content="Run Linter" />
                <Button x:Name="ClearLintingButton" Content="Clear Hints" />
            </StackPanel>
        </Border>

        <!-- Main Editor -->
        <controls:SyntaxHighlightingTextBox x:Name="Editor"
                                             Grid.Row="1"
                                             Margin="10"
                                             FontSize="14" />

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="10,5">
            <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                <TextBlock x:Name="StatusText" Text="Ready" VerticalAlignment="Center" Foreground="#333333" />
                <TextBlock x:Name="LineColumnText" Text="Ln 1, Col 1" Grid.Column="1" Margin="20,0" VerticalAlignment="Center" Foreground="#333333" />
                <TextBlock x:Name="CharCountText" Text="0 characters" Grid.Column="2" Margin="20,0" VerticalAlignment="Center" Foreground="#333333" />
                <TextBlock x:Name="LintingCountText" Text="0 hints" Grid.Column="3" VerticalAlignment="Center" Foreground="#333333" />
            </Grid>
        </Border>
    </Grid>
</Window>
